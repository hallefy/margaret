<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.pkmmte.view.CircularImageView
        android:id="@+id/imageEmpresa"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:foregroundGravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/image_eight"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="1dp"
        app:shadow="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNomeEmpresa"
        android:layout_width="54dp"
        android:layout_height="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Sankya"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageEmpresa"
        app:layout_constraintStart_toStartOf="@+id/imageEmpresa"
        app:layout_constraintTop_toBottomOf="@+id/imageEmpresa" />

    <TextView
        android:id="@+id/tvVagas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 Vagas"
        android:textColor="@color/colorVagas"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/tvNomeEmpresa"
        app:layout_constraintStart_toStartOf="@+id/tvNomeEmpresa"
        app:layout_constraintTop_toBottomOf="@+id/tvNomeEmpresa" />


</android.support.constraint.ConstraintLayout>